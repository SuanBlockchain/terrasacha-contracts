# Application Settings
APP_NAME="Payment System API"
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/payment_db

# Wompi Configuration
# Get these from: https://comercios.wompi.co/
WOMPI_PUBLIC_KEY=pub_test_your_public_key_here
WOMPI_PRIVATE_KEY=prv_test_your_private_key_here
WOMPI_EVENT_SECRET=your_event_secret_here
WOMPI_API_URL=https://sandbox.wompi.co/v1
# Use production URL: https://production.wompi.co/v1

# Binance Pay Configuration
# Get these from: https://merchant.binance.com/
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_MERCHANT_ID=your_merchant_id_here
BINANCE_API_URL=https://bpay.binanceapi.com
# Testnet: https://testnet.binanceapi.com

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Webhook URLs (must be publicly accessible)
WOMPI_REDIRECT_URL=http://localhost:3000/payment/result
WOMPI_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/wompi
BINANCE_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/binance

# Colombian Settings
DEFAULT_CURRENCY=COP
TIMEZONE=America/Bogota

# Logging
LOG_LEVEL=INFO
